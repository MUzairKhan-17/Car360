@{

    Layout = null;

}

@using Car360.Models;
@model Admin

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Car360</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/adminasset/img/logo.png" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/adminasset/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/adminasset/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/adminasset/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/adminasset/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        
        <!-- Content Start -->
        <div class="content">
        
            <!-- Update Start -->
            <div class="container-fluid">
                <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                    <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                        <div class="rounded p-4 my-4" id="login" style="min-width: 70vh;">
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <a>
                                    <h3 id="logo-login"><i class="fa fa-hashtag me-2"></i>Car360</h3>
                                </a>
                                <h3 id="logo-login">Update</h3>
                            </div>
                            <form method="post">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingText" value="@Model.a_id" name="a_id" hidden required>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingText" value="@Model.a_name" name="a_name" required>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control" id="floatingInput" value="@Model.a_mail" name="a_mail" readonly required>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingInput" value="@Model.a_image" name="a_image" hidden required>
                                </div>
                                <div class="form-floating mb-4">
                                    <input type="password" class="form-control" id="floatingPassword" value="@Model.a_pass" name="a_pass" required>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingText" value="@Model.a_status" name="a_status" hidden required>
                                </div>
                                <input type="submit" id="btn-login" class="btn py-3 w-100 mb-4" value="Update">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Update End -->
        
            <!-- Footer Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-dark rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-light text-sm-start">
                            &copy; <a href="#" id="toggle">Website-ASP</a>, All Right Reserved.
                        </div>
                        <div class="col-12 col-sm-6 text-center text-light text-sm-end">
                            Designed By UK Code's
                            </br>
                            Distributed By <a class="border-bottom" id="toggle" target="_blank">UK Theme's</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->
        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-lg-square back-to-top" id="btn-arrow"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminasset/lib/chart/chart.min.js"></script>
    <script src="~/adminasset/lib/easing/easing.min.js"></script>
    <script src="~/adminasset/lib/waypoints/waypoints.min.js"></script>
    <script src="~/adminasset/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/adminasset/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/adminasset/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/adminasset/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/adminasset/js/main.js"></script>
</body>

</html>