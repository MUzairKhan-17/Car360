@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using Car360.Models;
@model List<Product>

@if (TempData["add"] != null)
{
    <div class="alert alert-success"><strong>Success: @TempData["add"]</strong><button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="close"></button></div>
}
else { }

<!-- Recent Sales Start -->
<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-dark rounded h-100 p-4">
            <div class="col-4">
                <form class="d-none d-md-flex ms-4 mb-4">
                    <input class="form-control border-0" type="search" placeholder="Search..." name="Search">
                    <input type="submit" class="btn" id="btn-search" value="Search">
                </form>
            </div>
            <h2 class="text-light">@ViewBag.notfound</h2>
            <div class="table-responsive">
                <table class="table text-light text-center">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Company</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Model</th>
                            <th scope="col">Status</th>
                            <th scope="col">Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var row in Model)
                        {
                            <tr>
                                <td>@row.p_id</td>
                                <td>@row.p_company</td>
                                <td>@row.p_name</td>
                                <td>@row.p_price</td>
                                <td>@row.p_model</td>

                                @if (row.p_status == 1)
                                {
                                    <td>Active</td>
                                }
                                else
                                {
                                    <td>Deactive</td>
                                }
                                <td width="15%"><img src="~/Product-image/@row.p_image/@row.p_image" width="100%" height="100%" /></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Recent Sales End -->