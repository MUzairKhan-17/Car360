@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-xxl position-relative bg-light d-flex p-0">

    <!-- Sign Up Start -->
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <div class="rounded p-4 my-4" id="login" style="min-width: 70vh;">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <a>
                            <h3 id="logo-login"><i class="fa fa-hashtag me-2"></i>Car360</h3>
                        </a>
                        <h3 id="logo-login">Product</h3>
                    </div>
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="nameexample.com" name="p_company" required>
                            <label for="floatingInput">Company:</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingText" placeholder="jhondoe" name="p_name" required>
                            <label for="floatingText">Name:</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="nameexample.com" name="p_price" required>
                            <label for="floatingInput">Price:</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="nameexample.com" name="p_model" required>
                            <label for="floatingInput">Model:</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="file" class="form-control" id="floatingInput" name="p_image" required>
                        </div>
                        <span style="color: white;">@ViewBag.image</span>
                        <input type="submit" id="btn-login" class="btn py-3 w-100 mb-4" value="Insert">
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Sign Up End -->
</div>