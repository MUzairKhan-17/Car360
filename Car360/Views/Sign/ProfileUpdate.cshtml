@{
    Layout = "~/Views/Shared/_LayoutSign.cshtml";
}

@using Car360.Models;
@model Sign

<!-- Update start -->

<div class="container" id="sign-container">
    <div class="row"> 

        <form method="post" id="sign-form">
            <img src="~/asset/image/sign up.png" alt="Sign Up" id="sign-img">
            <h2 id="sign-h2">Update</h2>
            <div id="form-group">
                <input type="text" id="myinput" value="@Model.s_id" name="s_id" required hidden/>
            </div>
            <div id="form-group">
                <input type="text" id="myinput" value="@Model.s_name" name="s_name" required/>
            </div>
            <div id="form-group">
                <input type="text" placeholder="Enter Your Username:" id="myinput" value="@Model.s_user" name="s_user" readonly required>
            </div>
            <div id="form-group">
                <input type="email" placeholder="Enter Your Gmail:" id="myinput" value="@Model.s_mail" name="s_mail" required readonly>
            </div>
            <div id="form-group">
                <input type="number" placeholder="Enter Your Phone:" id="myinput" class="myinput-num" value="@Model.s_phone" name="s_phone" readonly required>
            </div>
            <div id="form-group">
                <input type="text" id="myinput" class="myinput-num" value="@Model.s_image" name="s_image" required hidden>
            </div>
            <div id="form-group">
                <input type="password" placeholder="Enter Your Password:" id="myinput-pass" value="@Model.s_pass" name="s_pass" required>
                <div id="toggle-pass" onclick="showhide()"></div>
            </div>
            <div id="form-group">
                <input type="text" id="myinput" value="@Model.s_status" name="s_status" required hidden/>
            </div>
            <button type="submit" id="sign-btn"><span id="index-span">Update</span></button>
        </form>

     }

    </div>
</div>

<!-- Update end -->