@{
    Layout = "~/Views/Shared/_LayoutSign.cshtml";
}

<!-- sign start -->

<div class="container" id="sign-container">
<div class="row">
<form method="post" enctype="multipart/form-data" id="sign-form">
<img src="~/asset/image/sign up.png" alt="Sign Up" id="sign-img">
<h2 id="sign-h2">Sign Up</h2>
<div id="form-group">
<input type="text" placeholder="Enter Your Name:" name="s_name" id="myinput" pattern="[a-zA-Z]{2+}" required>
<label for="myinput" id="mylabel">Enter Your Name:</label>
</div>
<div id="form-group">
<input type="text" placeholder="Enter Your Username:" name="s_user" id="myinput" pattern="[a-zA-Z0-9]{3+}" required>
<label for="myinput" id="mylabel">Enter Your Username:</label>
@if(ViewBag.user != null)
{
    <span id="sign-span">@ViewBag.user</span>
}
else{}
</div>
<div id="form-group">
<input type="email" placeholder="Enter Your Gmail:" name="s_mail" id="myinput" pattern="[a=z]+[0-9]+[gmail]+.+[com]+{8,30}" required>
<label for="myinput" id="mylabel">Enter Your Gmail:</label>
@if(ViewBag.mail != null)
{
    <span id="sign-span">@ViewBag.mail</span>
}
else{}
</div>
<div id="form-group">
<input type="number" placeholder="Enter Your Phone:" name="s_phone" id="myinput" class="myinput-num" pattern="[0-9]{11}" required>
<label for="myinput" id="mylabel">Enter Your Phone:</label>
@if(ViewBag.phone != null)
{
    <span id="sign-span">@ViewBag.phone</span>
}
else{}
</div>
<div id="form-group">
<input type="file" id="myinput" class="myinput-num" name="s_image" required>
@if(ViewBag.image != null)
{
    <span id="sign-span">@ViewBag.image</span>
}
else{}
</div>
<div id="form-group">
<input type="password" placeholder="Enter Your Password:"  name="s_pass" id="myinput-pass" pattern="[a-zA-Z0-9]+{8+}" required>
<label for="myinput" id="mylabel-pass">Enter Your Password:</label>
<div id="toggle-pass" onclick="showhide()"></div>
</div>
<button type="submit" id="sign-btn"><span id="index-span">Sign Up</span></button>
</form>
</div>
</div>

<!-- sign end -->